<Window x:Class="NaNoE.V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NaNoE.V2"
        xmlns:viewmodels="clr-namespace:NaNoE.V2.ViewModels"
        xmlns:views="clr-namespace:NaNoE.V2.Views"
        xmlns:models="clr-namespace:NaNoE.V2.Models"
        mc:Ignorable="d"
        Title="NaNoE v2.0-beta" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid Background="#222">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="5" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        
        <!-- Menu -->
        <Menu Grid.Row="1" Grid.Column="1" Background="#222"/>

        <!-- Interface -->
        <ContentControl Grid.Row="3" Grid.Column="1" Content="{Binding}" />
        
        <!-- Note: View use User Control (WPF) in Views -->
    </Grid>
</Window>
